<wux-select id="wux-select1" />
<wux-select id="wux-select2" />
<wux-select id="wux-select3" />
<wux-select id="wux-select4" />
<wux-select id="wux-select5" />
<wux-select id="wux-select6" />

<view class="page">
    <view class="page__hd">
        <view class="page__title">Select</view>
        <view class="page__desc">下拉框</view>
    </view>
    <view class="page__bd">
        <wux-cell-group>
            <wux-cell title="Single" is-link extra="{{ displayValue1 }}" bind:click="onClick1"></wux-cell>
            <wux-cell title="Multiple" is-link extra="{{ displayValue2 }}" bind:click="onClick2"></wux-cell>
            <wux-cell title="Multiple & max = 3" is-link extra="{{ displayValue3 }}" bind:click="onClick3"></wux-cell>
            <wux-cell title="Group" is-link extra="{{ displayValue4 }}" bind:click="onClick4"></wux-cell>
            <wux-cell title="Async" is-link extra="{{ displayValue5 }}" bind:click="onClick5"></wux-cell>
            <wux-cell title="Virtualized Select" is-link extra="{{ displayValue6 }}" bind:click="onClick6"></wux-cell>
        </wux-cell-group>
    </view>
</view>
