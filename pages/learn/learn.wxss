/* pages/learn/learn.wxss */
.container{
  height: 100vh;
  background-color: #EEEEEE;
  display: flex;
  flex-direction: column;
  padding-left: 0.5cm;
  padding-right: 0.5cm;
  padding-top: 0.2cm;
}
.progress{
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: row;
}
.progress text{
  font-size: 30rpx;
}
.english{
  margin-bottom: 0.2cm;
}
.english text{
  font-size: 50rpx;
  font-weight: 1000;
}
.vocal{
  margin-bottom: 0.5cm;
  display: flex;
  flex-direction: row;
}
.vocal text{
  font-size: medium;
}
.vocal image{
  height: 50rpx;
  width: 50rpx;
  margin-left: 0.3cm;
}
.label{
  background-color: silver;
  margin-top: 0cm;
  width: fit-content;
  padding: 5rpx;
}
.label text{
  font-size: small;
  color: "#646464";
}
.wordPicture
{
  height: 5cm;
  margin-bottom: 0.5cm;
}
.wordPicture image{
  max-height: 5cm;
  max-width: 100%;
}
.translationBox
{
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  padding: 0.5cm;
  margin-bottom: 0.5cm;
  height: fit-content;
}
.translation{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
}
.translation text{
  font-size: 30rpx;
}

.control{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0.5cm;
  justify-content: center;
  width: 100%;
}
.control button{
  width: fit-content;
  border-radius: 50%;
  background-color: deepskyblue;
  color: whitesmoke;
}
.prev{
  margin-left: 0.5cm;
}
.next{
  margin-right: 0.5cm;
}
.finish{
  margin-right: 0.5cm;
}
.examplesBox
{
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  padding: 0.5cm;
  margin-bottom: 0.5cm;
  height: fit-content;
}
.examples{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
}
.examples text{
  font-size: 30rpx;
}

.memoryBox
{
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  padding: 0.5cm;
  margin-bottom: 0.5cm;
  height: fit-content;
}
.memory{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
}
.memory text{
  font-size: 30rpx;
}
.noteBox
{
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  padding: 0.5cm;
  margin-bottom: 0.5cm;
  height: fit-content;
}
.noteContent{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
}
.noteContent text{
  font-size: 30rpx;
}

.margin{
  height: 1.5cm;
}
.margin image{
  height: 1.5cm;
}
van-button{
  border: none;
  background-color: #EEEEEE;
  width: fit-content;
}
.marks{
  display: flex;
  flex-direction: row;
}
.favorites{
  flex-grow: 1;
}
.show_detail {
  display: flex;
  flex-direction: row;
}
.show_detail text {
  color:gray;
  flex-grow: 1;
  margin-bottom: 0.5cm;
}